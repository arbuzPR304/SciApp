<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaspero.sciapp2.Activity.OptionActivity"
    android:orientation="vertical"
    android:background="@drawable/hero_bg_gradient"
    android:layout_weight="7"
    android:weightSum="7"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelLibs"
            android:layout_weight="1">

            <TextView
                android:text="Biblioteki CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#FAC740"
                android:textSize="12sp"
                android:textStyle="normal|bold"
                android:layout_margin="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1">

                <CheckBox
                    android:text="OpenCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/openCV"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:buttonTint="@color/white" />

                <CheckBox
                    android:text="BoofCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boof"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:buttonTint="@color/white"/>

                <CheckBox
                    android:text="OwnWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/other"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:buttonTint="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveFoto"
            android:layout_weight="1">

            <TextView
                android:text="Zapis po edycji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="#FAC740"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:text="Zapis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveCheckBTN"
                android:textColor="@android:color/background_light"
                android:textSize="10sp"
                android:buttonTint="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lowInput"
            android:layout_weight="1">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelLowRGB"
                android:layout_weight="1">

                <TextView
                    android:text="Dolna granica RGB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lowRGBLabel"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textColor="#FAC740"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lowRGB">

                <TextView
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:id="@+id/RlabelLow" />

                <TextView
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4Low"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="10sp" />

                <TextView
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blabelLow"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/rValueLow"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/gValueLow"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bValueLow"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rgbButtonLow"
                android:background="?android:attr/windowBackground"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="0dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:id="@+id/highLimiit">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/labelHighRGB"
                android:layout_weight="1">

                <TextView
                    android:text="GÃ³rna granica RGB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/highRGBLabel"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textColor="#FAC740"
                    android:textSize="12sp"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/highRGB">

                <TextView
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="8sp" />

                <TextView
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="8sp" />

                <TextView
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textColor="@android:color/background_light"
                    android:padding="5dp"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/rValue"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:duplicateParentState="false"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/gValue"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bValue"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/rgbButtonHigh"
                android:background="?android:attr/windowBackground"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="0dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:text="KOLOR Z ZDJÄCIA"
                android:id="@+id/colorBTN"
                android:background="@drawable/herro_button"
                android:textColor="#FAC740"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="12sp" />

            <Button
                android:text="ZAPISZ OPCJE"
                android:id="@+id/saveBTN"
                android:background="@drawable/herro_button"
                android:textColor="#FAC740"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
