<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hero_bg_gradient">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
            android:text="WYBIERZ ZDJĘCIE"
            android:id="@+id/chooseGalleryBtn"
            android:background="@drawable/herro_button"
            android:layout_gravity="center"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/item_not_selected"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/item_not_selected"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="16sp" />
        <Button
            android:text="PRZEJDŻ DO EDYCJI"
            android:id="@+id/editBtn"
            android:background="@drawable/herro_button"
            android:layout_gravity="center"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/item_not_selected"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="0dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/item_not_selected"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="16sp" />

    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:id="@+id/imagecontainer">
                        <ImageView
                            android:id="@+id/photoGaleryView"
                            android:layout_width="match_parent"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_height="400dp"></ImageView>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
